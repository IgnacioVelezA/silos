import math
import matplotlib.pyplot as plt

def generate_circle_tessellation(radius, circle_radius):
    centers = []
    num_circles = math.floor(radius / circle_radius)

    for i in range(num_circles):
        current_radius = radius - (i + 1) * circle_radius
        if current_radius <= 0:
            break
        
        circumference = 2 * math.pi * current_radius
        num_circles_in_circumference = math.floor(circumference / (2 * circle_radius))
        angle_increment = (2 * math.pi) / num_circles_in_circumference

        for j in range(num_circles_in_circumference):
            angle = j * angle_increment
            center_x = radius + current_radius * math.cos(angle)
            center_y = radius + current_radius * math.sin(angle)
            label = i * num_circles_in_circumference + j + 1  # Etiqueta numérica
            centers.append((center_x, center_y, label))

    return centers

# Ejemplo de uso
radius_of_space = 10
radius_of_circles = 1
plot_circles = True  # Cambiar a False para solo graficar los centros

circle_centers = generate_circle_tessellation(radius_of_space, radius_of_circles)

# Preparar el gráfico
fig, ax = plt.subplots()

# Trazar el espacio circular
circle = plt.Circle((radius_of_space, radius_of_space), radius_of_space, edgecolor='black', facecolor='none')
ax.add_patch(circle)

# Trazar los círculos y sus centros con etiquetas
for i, center in enumerate(circle_centers):
    if plot_circles:
        circle = plt.Circle((center[0], center[1]), radius_of_circles, edgecolor='black', facecolor='blue')
        ax.add_patch(circle)
    ax.plot(center[0], center[1], 'ro')  # Dibujar el centro del círculo como un punto rojo
    ax.annotate(center[2], (center[0], center[1]), color='white', ha='center', va='center')  # Agregar etiqueta numérica

# Ajustar los límites del gráfico
ax.set_xlim(0, radius_of_space * 2)
ax.set_ylim(0, radius_of_space * 2)

# Ajustar los ejes para que tengan el mismo aspecto
ax.set_aspect('equal')

# Mostrar el gráfico
plt.show()


